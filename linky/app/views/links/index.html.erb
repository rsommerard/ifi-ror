<div class="row">
  <div class="col-md-12">
    <% if flash[:notice] %>
      <%= raw print_flash_notice %>
    <% end %>
    <%= link_to 'Add a link', new_link_path, class: 'btn btn-primary' %>
  </div>
</div>
<% @links.each do |link| %>
  <div class="row bordered element">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-1">
          <%= link_to '', increment_link_path(link), class: 'glyphicon glyphicon-triangle-top triangle-icon' %>
        </div>
        <div class="col-md-9">
          <!-- empty -->
        </div>
        <div class="col-md-2">
          <!-- empty -->
        </div>
      </div>
      <div class="row">
        <div class="col-md-1 score">
          <span><b><%= link.score %></b></span>
        </div>
        <div class="col-md-9 text-left">
          <span><b><%= link_to truncate(link.title, length: 80), link.url, class: 'url' %></b><span>
        </div>
        <div class="col-md-2">
          <!-- empty -->
        </div>
      </div>
      <div class="row">
        <div class="col-md-1">
          <%= link_to '', decrement_link_path(link), class: 'glyphicon glyphicon-triangle-bottom triangle-icon' %>
        </div>
        <div class="col-md-9">
          <!-- empty -->
        </div>
        <div class="col-md-2 text-right">
          <%= link_to '', edit_link_path(link), class: 'glyphicon glyphicon-edit edit-icon' %>
          <%= link_to '', delete_link_path(link), method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash trash-icon" %>
          <%= link_to '', link.url, class: 'glyphicon glyphicon-play go-icon' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
