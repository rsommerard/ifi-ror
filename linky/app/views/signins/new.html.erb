<div class="row">
  <div class="col-md-12">
  <% if @user.errors.any? %>
  <div class='alert alert-danger alert-dismissible' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
  <p><%= pluralize(@user.errors.count, "error") %> prohibited this user from being logged:â€‹
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </p>
  </div>
  <% end %>
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
      <%= form_for @user, url: {controller: "signins", action: "create"} do |f| %>
        <div class="form-group">
          <%= f.label :login, 'Login:', class: 'sr-only' %>
          <%= f.text_field :login, class: 'form-control', placeholder: 'Login' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Password:', class: 'sr-only' %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        <%= link_to 'Back', links_path, class: 'btn btn-default' %>
        <%= f.submit "Sign in", class: 'btn btn-primary' %>
      <% end %>
    </div>
    </div>
  </div>
</div>
